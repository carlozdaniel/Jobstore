@font-face{
  font-family:"kostic";
  src: url(<%= asset_path("Hind-Regular.ttf") %>) format('truetype');
}
@font-face{
  font-family:"kostic";
  src: url(<%= asset_path("Hind-Bold.ttf") %>) format('truetype');
  font-weight:bold;
}
@font-face{
  font-family:"kostic";
  src: url(<%= asset_path("Hind-Light.ttf") %>) format('truetype');
  font-weight:lighter;
}

.kostic{
  font-family:"kostic";
}
.circle{
  border-radius: 50%;
  display: inline-block;
  padding-top: 10px;
  height: 70px;
  width: 80px;
}
.landing-form{
  border: none;
  outline: none;
  border-bottom: solid 1px #E43D7A;
  font-size: 1.5em;
  color: #C8376C;
}

::-webkit-input-placeholder{
  color: #E43D7A;
  opacity: 0.7;
}
:-moz-placeholder{
  color: #E43D7A;
  opacity: 0.7;
}
::-moz-placeholder{
  color: #E43D7A;
  opacity: 0.7;
}
:-ms-input-placeholder{
  color: #E43D7A;
  opacity: 0.7;
}
