.col-lg-7.col-md-8.col-xs-12.col-sm-10.col-sm-11.no-float.center-block
  %article.card.big-padding
    %header
      %h1.grey-text.bold= @product.name
    %section
      .col-xs-6.col-md-5.no-padding.inline-block
        =image_tag @product.avatar.url
      .col-xs-1.inline-block.hidden-xs
      .col-xs-5.col-md-6.inline-block.text-left
        %h3.blue-text.bold.normal= @product.user.email
        %h3.green-text.bold.normal
          Precio: 
          %span.grey-text= "$#{@product.pricing}"
        %h3.green-text.bold.normal
          Archivo:
          %span.grey-text= 20
        %h3.green-text.bold.normal
          Tamano: 
          %span.grey-text= "2gb"
    %section
      %h3.green-text.bold.normal Descripcion
      %p= @product.description